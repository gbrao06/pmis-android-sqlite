<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
    <!-- Task Name -->
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
     
    <EditText android:id="@+id/txt_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"    
 		android:focusable="false"
 		android:hint="Task Description."/>
 	
   <EditText android:id="@+id/txt_assigned_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"    
 		android:focusable="false"
 		android:hint="user"/>
 </LinearLayout>
   
    <!-- Estimated Start -->
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView android:id="@+id/text_estimated_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="start Date"/>    
 
    <EditText android:id="@+id/estimtaed_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"    
 		android:inputType="date"
 		android:focusable="false"
 		android:hint="mm/dd/yyyy"
 		android:background="@drawable/rounded_edit_text"/>
 </LinearLayout>
 
 <!-- Estimated End -->
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
     <TextView android:id="@+id/text_estimated_end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="end Date"/>    
 
    <EditText android:id="@+id/estimated_end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"    
 		android:inputType="date"
 		android:focusable="false"
 		android:hint="mm/dd/yyyy"/>
    
 </LinearLayout>
 
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
     <TextView android:id="@+id/text_priority"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Priority:"/>    
    
     <Spinner
        android:id="@+id/priority_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
   </LinearLayout>
   <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
     <TextView android:id="@+id/text_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Status:"/>    
    
     <Spinner
        android:id="@+id/status_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
 </LinearLayout>
 
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">     
    <TextView android:id="@+id/text_efforts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Daily Efforts:"/>    
    
    <EditText android:id="@+id/efforts_per_day"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="8.0"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold"    
 		android:inputType="numberDecimal"/>
	</LinearLayout>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"> 
    
    <Button
        android:id="@+id/saveTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Save Task" 
		android:background="@drawable/blue_button"/>

    <Button
        android:id="@+id/deleteTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Delete Task" 
        android:background="@drawable/blue_button"/>
     
    </LinearLayout>
    
</LinearLayout>
